<UserControl x:Class="NewApp.UI.UserControls.AppLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Margin="0"
             xmlns:UsrCtrls="clr-namespace:NewApp.UI.UserControls" >
    <Grid  Height="95" Style="{StaticResource WindowHdrFtrStyle}">
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock FontFamily="Lucida Bright" FontStyle="Italic" FontWeight="ExtraBold" FontSize="36" Style="{StaticResource TextMainHdrStyle}" VerticalAlignment="Bottom" Margin="2">NewApp</TextBlock>
            <TextBlock  VerticalAlignment="Bottom" Margin="5" Style="{StaticResource TextHdrFtrStyle}">Retail Business Management System</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
            <UsrCtrls:UserDtlCtrl></UsrCtrls:UserDtlCtrl>
            <!--<MenuItem Header="Logout" Name="menuitem_LogOut"   Click="menuitem_LogOut_Click" />-->
            <Button Name="menuitem_LogOut" Content="Logout"   HorizontalAlignment="Right"  Height="25" Width="50" Click="menuitem_LogOut_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
