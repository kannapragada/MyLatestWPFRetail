<UserControl x:Class="NewApp.UI.UserControls.HdrControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
        <Grid Width="285" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="0.1*" />
            </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Name="tb_UserName"  Text="User Name:"></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="3" Name="lbl_UserName" ></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Name="tb_DateTime"  Text="Today:"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="3" Name="lbl_DateTime" ></TextBlock>
    </Grid>
</UserControl>
