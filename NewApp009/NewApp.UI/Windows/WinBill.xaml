<Window x:Class="NewApp.UI.Windows.WinBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:repctrl="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        xmlns:UsrRepCtrls="clr-namespace:NewApp.Reports"
        xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        Name="WndBill"   Margin="5" Width="475" WindowStartupLocation="CenterScreen" WindowState="Normal" WindowStyle="None" ShowInTaskbar="False" >
    <Grid  VerticalAlignment="Center" Margin="5">
        <StackPanel Orientation="Vertical">
            <TextBlock Name="tb_BusyBarText"></TextBlock>
            <TextBlock HorizontalAlignment="Center">Printing bill. Please wait.....</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <DockPanel Name="dockpanel_docpanel" Background="Gray"  Height="500" Width="450" Visibility="Visible"></DockPanel>
            <Button  Content="Ok" Height="25" Width ="75" Name="Btn_Ok" Click="Btn_Ok_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
