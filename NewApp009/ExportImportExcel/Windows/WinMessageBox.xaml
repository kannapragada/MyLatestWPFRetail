                            VerticalAlignment="Center"></TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Button  Name="btn_Ok" Content="OK"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" Click="btn_Ok_Click" Height="25" Width="75"></Button>
                <Button  Name="btn_Yes" Content="Yes"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" Click="btn_Yes_Click" Height="25" Width="75"></Button>
                <Button  Name="btn_No" Content="No"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" Click="btn_No_Click" Height="25" Width="75"></Button>
